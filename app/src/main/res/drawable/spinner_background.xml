<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/surface" />
            <corners android:topRightRadius="8dp" android:bottomRightRadius="8dp" />
            <stroke android:width="1dp" android:color="@color/border_light" />
        </shape>
    </item>
    <item android:gravity="center_vertical|end" android:right="8dp">
        <rotate
            android:fromDegrees="135"
            android:toDegrees="135"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <size android:width="10dp" android:height="10dp" />
                <solid android:color="@color/text_secondary" />
            </shape>
        </rotate>
    </item>
</layer-list>
